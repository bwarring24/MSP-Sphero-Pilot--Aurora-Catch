<Page
    x:Class="Aurora_Catch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aurora_Catch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="26" Text="Status: " />
            <TextBlock Name="blkStatus" FontSize="20" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Button Name="btnColor" Content="Change Color" Click="btnColor_Click" />
            <Button Name="btnStop" Content="Stop" Margin="10,0,0,0" Click="btnStop_Click" />
        </StackPanel>


        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <TextBlock FontSize="26" Text="X: " />
                <TextBlock Name="blkAccX" FontSize="26" Text="X: " />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="26" Text="X: " />
                <TextBlock Name="blkAccY"  FontSize="26" Text="X: " />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="26" Text="X: " />
                <TextBlock Name="blkAccZ"  FontSize="26" Text="X: " />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
